{
    "extends": [
      "next/core-web-vitals",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "plugins": ["react", "react-hooks"],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "no-console": "warn",
      "no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "args": "after-used",
          "ignoreRestSiblings": true
        }
      ],
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "indent": ["error", 2],
      "max-len": [
        "warn",
        {
          "code": 80,
          "ignoreUrls": true
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "ignorePatterns": [".next/"]
  }